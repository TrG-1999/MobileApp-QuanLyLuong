<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="Lựa chọn tác vụ"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_phongban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.25"
            android:text="Phòng ban"
            android:textSize="20sp"
            app:backgroundTint="#11B118" />

        <Button
            android:id="@+id/btn_nhanvien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.5"
            android:text="Nhân viên"
            android:textSize="20sp"
            app:backgroundTint="#11B118" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_chamcong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.25"
            android:text="Chấm công"
            android:textSize="20sp"
            app:backgroundTint="#11B118" />

        <Button
            android:id="@+id/btn_tamung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="0.7"
            android:text="Tạm ứng"
            android:textSize="20sp"
            app:backgroundTint="#11B118" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_theodoiphongban"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:text="Theo dõi phòng ban"
            android:textSize="20sp"
            app:backgroundTint="#3F51B5" />

        <Button
            android:id="@+id/btn_thongke"
            android:layout_width="163dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:text="Thống Kê"
            android:textSize="20sp"
            app:backgroundTint="#3F51B5" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_thoat"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:text="Thoát"
        android:textSize="20sp"
        app:backgroundTint="#D80F0F" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#101010" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:text="Nhóm 3:"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="180dp"
        android:text="Đàm Quang Ân"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="180dp"
        android:text="Hà Phước Bình"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="180dp"
        android:text="Lê Trường Giang"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="180dp"
        android:text="Đỗ Anh Quân"
        android:textSize="20sp" />
</LinearLayout>