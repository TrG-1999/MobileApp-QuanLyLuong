<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context=".TheoDoiPhongBan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="#2196F3"
                android:gravity="center"
                android:text="Theo Dõi Phòng Ban"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="Tên phòng ban"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerTenPB"
                    android:layout_width="411dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Chọn"
                android:textColor="#4CAF50"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioNV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bảng lương nhân viên đang chọn" />

                        <RadioButton
                            android:id="@+id/radioTH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bảng lương tổng hợp" />
                    </RadioGroup>
                </LinearLayout>

                <Button
                    android:id="@+id/btnIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:text="IN BÁO CÁO"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="#369C3B" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Bảng lương NV:"
                    android:textColor="#2196F3"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spinnerMaNV"
                    android:layout_width="274dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:padding="3dp"
                        android:text="Họ Tên"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:padding="3dp"
                        android:text="Thời gian"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:padding="3dp"
                        android:text="Số ngày"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="3"
                        android:padding="3dp"
                        android:text="Tiền Lương"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>
                </TableRow>

            </TableLayout>
  <TableLayout
                android:id="@+id/tableLuongNV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">


            </TableLayout>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:text="Các nhân viên thuộc phòng ban: "
                android:textColor="#2196F3"
                android:textSize="15sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="0"
                        android:padding="3dp"
                        android:text="Mã NV"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:padding="3dp"
                        android:text="Họ Tên NV"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:padding="3dp"
                        android:text="Mức lương"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:background="@drawable/table_row_border_pb"/>
                </TableRow>
            </TableLayout><TableLayout
                android:id="@+id/tableNV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng NV:"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:focusable="false"
                    android:id="@+id/txtTongNV"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:enabled="false"/>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Số Tháng:"
                    android:textColor="#4CAF50"
                    android:textSize="16sp" />

                <EditText
                    android:focusable="false"
                    android:id="@+id/txtSoThang"
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:enabled="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng lương:"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:focusable="false"
                    android:id="@+id/txtTongLuongAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:enabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>